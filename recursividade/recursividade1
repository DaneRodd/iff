#include <iostream>
using namespace std;

int somatorio(int n){
  if(n == 1){
    return 1;
  }
  if(n > 1){
    return n + somatorio(n - 1);
  }
  if(n == 0){
    return 1;
  }
}

int main() {
  int n;
  do{
    cout<<"Digita aÃ­: ";
    cin>> n;
  }while(n < 0);

  cout<<"Resultado: "<<somatorio(n);

  return 0;
}
